<Page x:Class="Sim.Modulos.Portarias.View.pEdite"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Sim.Modulos.Portarias.View"
      xmlns:shared="clr-namespace:Sim.Modulos.Portarias.View.Parts"
      xmlns:vm="clr-namespace:Sim.Modulos.Portarias.ViewModel"
      mc:Ignorable="d" 
      UseLayoutRounding="True"
      SnapsToDevicePixels="True"
      Title="pEdite">

    <Page.DataContext>
        <vm:vmEdit/>
    </Page.DataContext>

    <Grid >
        <Grid Margin="10,42,10,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="0"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <shared:Edit HorizontalAlignment="Center" Grid.Row="1"/>
        </Grid>
    </Grid>
</Page>
